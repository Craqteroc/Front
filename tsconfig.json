{
	"compilerOptions": {
		"target": "ES6",
		"jsx": "react",
		"jsxFactory": "$mol_dom_jsx",
		"module": "commonjs",
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"alwaysStrict": true,
		"allowUnusedLabels": true,
		"removeComments" : true ,
		"sourceMap" : true ,
		"inlineSources" : true ,
		"declaration" : true
	},
	"include": [
		"**/*.ts",
		"**/*.tsx"
	],
	"exclude": [
		"node_modules",
		"**/-/*"
	],
	"types" : ["node"],
	"atom": {
		"rewriteTsconfig": false
	},
	"compileOnSave": false
}
